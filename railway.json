{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.simple2"
  },
  "deploy": {
    "startCommand": "python -m uvicorn app.main_minimal:app --host 0.0.0.0 --port $PORT --log-level debug",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  }
}